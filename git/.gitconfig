[include]
	path = ~/.gituser

[alias]
	a = add
	br = branch
	cf = cat-file
	ci = commit
	cia = commit --amend
  	cl = clone
  	co = checkout
  	df = diff
  	dfc = diff --cached
  	fe = fetch
  	l = log
  	me = merge
  	pl = pull
  	plo = pull origin
  	ps = push
  	pso = push origin
  	rb = rebase
  	rba = rebase --abort
  	rbc = rebase --continue
  	re = remote
  	rs = reset
  	rss = reset --soft
  	rsh = reset --hard
  	rv = revert
  	sm = submodule
  	sma = submodule add
  	smf = submodule foreach
  	sh = stash
  	sha = stash apply
  	shc = stash clear
  	shl = stash list
  	shp = stash pop
  	shs = stash save
  	st = status
  	sw = show
  	t = tag

	forget = update-index --assume-unchanged
	unforget = update-index --no-assume-unchanged

	alias = "!git config -l | grep alias | cut -c 7- | sort"
	gitconfig = "!cat ~/.gitconfig"

	find = "!git ls-files | grep -i"
	grep = grep -Ii

	totrash = clean -ndx
	trash = clean -ffdx

	tree = log --graph --abbrev-commit --decorate --date=relative --all \
    	       --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) \
    	       %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
	who = shortlog -sne

[core]
	excludesfile = ~/.cvsignore
	pager = less

[man]
	viewer = less

[apply]
	whitespace = nowarn

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
	pager = true

[mergetool]
	keepbackup = false
	keeptemporaries = false

[branch]
	autosetuprebase = always

[help]
	autocorrect = 10

[advice]
	statusHints = false
